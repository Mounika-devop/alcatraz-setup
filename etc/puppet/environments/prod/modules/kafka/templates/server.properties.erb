############################# Server Basics #############################

# The id of the broker. This must be set to a unique integer for each broker.
broker.id=<%= @broker_id %>

############################# Socket Server Settings #############################

# The port the socket server listens on
port=<%= @kafka_port %>

# Hostname the broker will bind to and advertise to producers and consumers.
# If not set, the server will bind to all interfaces and advertise the value returned from
# from java.net.InetAddress.getCanonicalHostName().
#host.name=localhost

# The number of threads handling network requests
num.network.threads=2

# The number of threads doing disk I/O
num.io.threads=2

# The send buffer (SO_SNDBUF) used by the socket server
socket.send.buffer.bytes=1048576

# The receive buffer (SO_RCVBUF) used by the socket server
socket.receive.buffer.bytes=1048576

# The maximum size of a request that the socket server will accept (protection against OOM)
message.max.bytes=125000000
replica.fetch.max.bytes=125829120
socket.request.max.bytes=1258291200
############################# Log Basics #############################

# The directory under which to store log files
log.dir=<%= @kafka_logs_dir %>
log.flush.interval.messages=10000
log.flush.interval.ms=1000
log.retention.hours=720
log.segment.bytes=1073741824
log.cleanup.interval.mins=1
zookeeper.connect=<%= @zookeeper_connects %>
zookeeper.connection.timeout.ms=<%= @zookeeper_connection_timeout_ms %>
kafka.metrics.polling.interval.secs=5
kafka.metrics.reporters=kafka.metrics.KafkaCSVMetricsReporter
kafka.csv.metrics.dir=<%= @kafka_metrics_dir %>
kafka.csv.metrics.reporter.enabled=true
auto.create.topics.enable=false
controlled.shutdown.enable=true
controlled.shutdown.max.retries=3
auto.leader.rebalance.enable=true
inter.broker.protocol.version=0.11.0.0
log.message.format.version=0.11.0.0
min.insync.replicas=2
default.replication.factor=3
num.replica.fetchers=2
delete.topic.enable=true
#set offsets.retention.minutes = (log.retention.hours + one hour)
offsets.retention.minutes=43260
