[Unit]
Description=StormUI Startup service script

[Service]
User=<%=@storm_user%>
Group=<%=@storm_group%>
Type=simple
Environment=JAVA_HOME=/usr/lib/jvm/java-8-oracle/jre
Environment=STORM_HOME=<%=@apps_dir%>/<%=@storm_version%>
Environment=STORM_APC_LIB=<%=@apps_dir%>/<%=@storm_version%>/apclibs
Environment=STORM_APC_CONFIG=<%=@apps_dir%>/<%=@storm_version%>/conf
ExecStart=/apps/<%=@storm_version%>/bin/storm ui
SuccessExitStatus=143
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
