[Unit]
Description=Hazelcast StartUp Script

[Service]
User=<%=@hazelcast_user%>
Group=<%=@hazelcast_group%>
Type=simple
Environment=JAVA_HOME=/usr/lib/jvm/java-8-oracle
WorkingDirectory=<%=@hazelcast_home%>/bin
ExecStart=<%=@hazelcast_home%>/bin/start.sh
SuccessExitStatus=143
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
