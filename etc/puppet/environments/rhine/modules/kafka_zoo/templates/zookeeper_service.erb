[Unit]
Description=Zookeeper StartUp Script

[Service]
User=<%= @zookeeper_user %>
Group=<%= @zookeeper_group %>
Type=forking
Environment=JAVA_HOME=/usr/lib/jvm/java-7-oracle
ExecStart=<%= @zookeepr_dir %>/bin/zkServer.sh start
SuccessExitStatus=143
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
